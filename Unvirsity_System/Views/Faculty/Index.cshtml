@using Unvirsity_System.Models
@model List<Faculty>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link href="~/Content/styleu.css" rel="stylesheet" />
<div class="container page-wrapper">
    <div class="page-inner">
        <div class="row">

            @foreach (var item in Model)
            {
            <div class="box-wrapper" style="float:left">
                @* <img src="@item.Image" alt="Faculty img" class="product-img" width="100" height="200">*@
                @if (item.Image != null)
                {
                    string imageBase64 = Convert.ToBase64String(item.Image);
                    string imageSrc = string.Format("data:image/gif;base64,{0}", imageBase64);
                    <img src="@imageSrc" alt="unversity img" class="product-img" width="100" height="200" />
                }
                <div class="box-info">
                    <h1 class="main-title">@item.Name</h1>
                    @*<h2 class="sub-title">@item.Name</h2>*@
                    <h3 class="sub-title">tel:@item.Telephon </h3>
                    <div>
                        <a href="\Faculty\details\@item.ID" class="btn btn-primary">view details</a>
                        @*<button class="btn btn-primary">view faculty</button>*@
                    </div>
                </div>

                <div class="right-column">

                    <span class="price">@item.Costs$</span>
                </div>

            </div>
            }
        </div>
    </div>
</div>
