@model IEnumerable<Unvirsity_System.Models.Submit_Student>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Faculity.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.The_name_is_quadrant)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Total_General_Secondary_Degrees)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Address)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Telephon)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.graduation_certificate)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Faculity.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.The_name_is_quadrant)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Total_General_Secondary_Degrees)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Address)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Telephon)
        </td>
        <td>
            <div style="height:200px;border:1px solid white;border-radius:20px; margin:20px;">
                <img src="@Url.Content(item.graduation_certificate)" style="height:190px; width:160px; border-radius:20px" />
            </div>
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.ID }) |
            @Html.ActionLink("Details", "Details", new { id=item.ID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.ID })
